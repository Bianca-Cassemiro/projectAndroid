<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151B2B"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Nebulosa Carina, está a 7,5 mil anos-luz de distância da Terra!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageCarina"
        android:layout_width="498dp"
        android:layout_height="290dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/main_image_star_forming_region_carina_nircam_final_5mb" />


    <Button
        android:id="@+id/button"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:backgroundTint="#242587"
        android:text="Clique aqui"
        app:layout_constraintBottom_toTopOf="@+id/imageCarina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTop" />

</androidx.constraintlayout.widget.ConstraintLayout>